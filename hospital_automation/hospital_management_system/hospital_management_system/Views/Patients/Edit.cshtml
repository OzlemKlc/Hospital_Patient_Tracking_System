@model Patient

<!-- <h1>Hasta Düzenle</h1> -->

<form method="post" asp-controller="Patients" asp-action="Edit">
    <div class="form-group">
      
        <input class="form-control" type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label>Identification Number :</label>
        <input class="form-control" asp-for="TcNum" />
        @Html.ValidationMessageFor(m => m.TcNum, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Name Surname :</label>
        <input class="form-control" asp-for="NameSurname" />
    </div>
    <div class="form-group">
        <label>Birth Date :</label>
        <input class="form-control" asp-for="BirthDate" type="date" />
    </div>

    <button type="submit">Submit</button>
</form>
@{
    var errorMessage = ViewBag.ErrorMessage;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
<a asp-action="Index" >Go Back</a>


