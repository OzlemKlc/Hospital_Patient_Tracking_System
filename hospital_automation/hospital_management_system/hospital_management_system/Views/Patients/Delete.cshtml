<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" onsubmit="return confirmDelete();">
	<button type="submit">Delete</button>
</form>

<a href="@Url.Action("Index")">Go Back</a>

<script>
	function confirmDelete() {
		if (confirm("Are you sure you want to delete this record?")) {
			return true;
		} else {
			return false;
		}
	}
</script>